<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guanocoder.javafxapp.UserViewController">
    <children>
        <VBox layoutX="250.0" layoutY="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox>
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="txtUserName" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="First Name" />
                        <TextField fx:id="txtFirstName" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Last Name" />
                        <TextField fx:id="txtLastName" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Date created" />
                        <DatePicker fx:id="dateCreated" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Last login date" />
                        <DatePicker fx:id="dateLastLogin" />
                    </children>
                </HBox>
                <HBox VBox.vgrow="ALWAYS" />
                <HBox alignment="BOTTOM_RIGHT">
                    <children>
                        <Button mnemonicParsing="false" text="Cancel" />
                        <Button mnemonicParsing="false" text="Save" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
